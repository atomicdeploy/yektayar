# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab

# Package files
[{package.json,package-lock.json,bun.lock}]
indent_size = 2

# Configuration files
[*.config.{js,ts}]
indent_size = 2

# SVG files
[*.svg]
insert_final_newline = false

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# PowerShell scripts
[*.ps1]
end_of_line = crlf
