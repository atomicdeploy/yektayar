# npm configuration for consistent package-lock.json across machines
# This helps prevent "peer": true inconsistencies

# Use lockfile version 3 (npm v7+)
lockfile-version=3

# Always install peer dependencies automatically (npm v7+ default)
# This ensures consistent behavior across all machines
auto-install-peers=true

# Use exact versions from package-lock.json in CI
# package-lock=true is default but explicitly set for clarity
package-lock=true

# Ensure consistent line endings in package-lock.json
# This prevents unnecessary diffs
save-exact=false

# Log level for better debugging
loglevel=notice

# Prefer online to ensure fresh registry data
prefer-online=false
prefer-offline=false
