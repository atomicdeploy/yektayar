<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Shadow -->
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
            <solid android:color="@color/shadowColor"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- Dialog frame -->
            <corners android:radius="16dp"/>
            <stroke
                android:color="@color/shadowColor"
                android:width="0dp"/>
            <solid android:color="@color/dialogBackground"/>
        </shape>
    </item>
</layer-list>
