{
  "name": "@yektayar/mobile-app",
  "version": "0.1.0",
  "description": "YektaYar Mobile App (Ionic + Capacitor)",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/optimize-images.mjs",
    "build": "vue-tsc && vite build && npx cap copy",
    "build:production": "node scripts/optimize-images.mjs && vite build --mode production && npx cap copy android",
    "preview": "vite preview",
    "lint": "eslint .",
    "type-check": "vue-tsc --noEmit",
    "optimize-images": "node scripts/optimize-images.mjs",
    "ionic:build": "npm run build",
    "ionic:serve": "npm run dev",
    "cap:sync": "npx cap sync android",
    "cap:open": "npx cap open android",
    "android:build:debug": "cd android && ./gradlew assembleDebug && cd ..",
    "android:build:release": "cd android && ./gradlew assembleRelease && cd ..",
    "android:clean": "cd android && ./gradlew clean && cd .."
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/core": "^7.4.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@ionic/vue": "^8.7.10",
    "@ionic/vue-router": "^8.7.10",
    "axios": "^1.13.2",
    "ionicons": "^8.0.13",
    "overlayscrollbars": "^2.13.0",
    "overlayscrollbars-vue": "^0.5.9",
    "pinia": "^3.0.4",
    "sharp": "^0.34.5",
    "socket.io-client": "^4.8.1",
    "vue": "^3.5.25",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "sass": "^1.94.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vue-tsc": "^3.1.8"
  }
}
