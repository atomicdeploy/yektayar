{
  "name": "@yektayar/mobile-app",
  "version": "0.1.0",
  "description": "YektaYar Mobile App (Ionic + Capacitor)",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && ionic capacitor copy",
    "build:production": "vite build --mode production && npx cap copy android",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "ionic:build": "npm run build",
    "ionic:serve": "npm run dev",
    "cap:sync": "npx cap sync android",
    "cap:open": "npx cap open android",
    "android:build:debug": "cd android && ./gradlew assembleDebug && cd ..",
    "android:build:release": "cd android && ./gradlew assembleRelease && cd ..",
    "android:clean": "cd android && ./gradlew clean && cd .."
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/app": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/haptics": "^5.0.0",
    "@capacitor/keyboard": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0",
    "@ionic/vue": "^7.6.0",
    "@ionic/vue-router": "^7.6.0",
    "ionicons": "^7.2.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^3.0.4",
    "axios": "^1.6.0",
    "socket.io-client": "^4.6.0",
    "vue-i18n": "^9.8.0"
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/core": "^7.4.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@ionic/vue": "^8.7.9",
    "@ionic/vue-router": "^8.7.9",
    "axios": "^1.13.2",
    "ionicons": "^8.0.13",
    "pinia": "^3.0.4",
    "socket.io-client": "^4.8.1",
    "vue": "^3.5.24",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vue-tsc": "^3.1.3"
  }
}
