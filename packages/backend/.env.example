# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/yektayar
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yektayar
DB_USER=yektayar_user
DB_PASSWORD=your_secure_password_here

# Session & Security
SESSION_SECRET=change_this_to_a_secure_random_string
JWT_SECRET=change_this_to_another_secure_random_string
JWT_EXPIRY=7d

# API Keys (for future use)
# AI_API_KEY=your_ai_api_key
# SMS_GATEWAY_API_KEY=your_sms_gateway_key
# EMAIL_API_KEY=your_email_service_key

# CORS Settings
CORS_ORIGIN=http://localhost:5173,http://localhost:8100

# Set to 'true' when behind a reverse proxy (Apache/Nginx) that handles CORS
# This prevents duplicate CORS headers
DISABLE_CORS=false

# WebSocket
WEBSOCKET_PORT=3001

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# API Documentation (Swagger) Protection
# Basic authentication for /api-docs endpoint (only available in development)
# In production (NODE_ENV=production), the API documentation is completely disabled (404)
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=change_this_secure_password
